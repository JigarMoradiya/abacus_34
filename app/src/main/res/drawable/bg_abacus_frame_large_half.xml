<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#D61943" />
            <corners android:bottomRightRadius="@dimen/padding_radius_abacus_frame_large"
                android:topRightRadius="@dimen/padding_radius_abacus_frame_large"
                />
            <padding
                android:bottom="@dimen/padding_radius_abacus_frame_large"
                android:right="@dimen/padding_radius_abacus_frame_large"
                android:top="@dimen/padding_radius_abacus_frame_large" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:bottomRightRadius="@dimen/padding_radius_abacus_frame_large_inner"
                android:topRightRadius="@dimen/padding_radius_abacus_frame_large_inner" />
        </shape>
    </item>
</layer-list>