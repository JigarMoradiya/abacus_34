<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.jigar.me.data.model.data.LoginData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icons_margin2"
            android:elevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/light_back"
            app:cardCornerRadius="@dimen/menu_icons_corner"
            app:cardMaxElevation="@dimen/card_elevation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/menu_icons"
            android:layout_height="@dimen/menu_icons"
                android:padding="@dimen/menu_icons_padding"
                app:srcCompat="@drawable/ic_back" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTitle"
            style="@style/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/title_margin"
            android:text="@string/edit_profile"
            app:layout_constraintBottom_toBottomOf="@+id/cardBack"
            app:layout_constraintStart_toEndOf="@+id/cardBack"
            app:layout_constraintTop_toTopOf="@+id/cardBack" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardBack">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.10" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guidelineEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.90" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtLable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/change_your_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeMedium"
                        app:fontFamily="@font/font_semibold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilName"
                        style="@style/Widget.MyTheme.TextInputLayoutStyleWhite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_padding12"
                        android:layout_marginEnd="@dimen/activity_padding6"
                        app:layout_constraintEnd_toStartOf="@+id/tilEmail"
                        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                        app:layout_constraintTop_toBottomOf="@+id/txtLable"
                        app:startIconDrawable="@drawable/ic_outline_person_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/kid_s_name"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:lines="1"
                            android:text="@{data.name}"
                            android:maxLines="1"
                            android:nextFocusRight="@+id/etEmail"
                            android:singleLine="true"
                            android:textSize="@dimen/textSizeLarge" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.MyTheme.TextInputLayoutStyleWhite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_padding6"
                        android:layout_marginTop="@dimen/activity_padding12"
                        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                        app:layout_constraintStart_toEndOf="@+id/tilName"
                        app:layout_constraintTop_toBottomOf="@+id/txtLable"
                        app:startIconDrawable="@drawable/ic_outline_email_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email_id"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:text="@{data.email}"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/etPassword"
                            android:singleLine="true"
                            android:textSize="@dimen/textSizeLarge" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/activity_padding4"
                        android:layout_marginEnd="@dimen/activity_padding6"
                        android:background="@drawable/bg_all_curved_border_iedt"
                        android:gravity="center"
                        android:paddingStart="@dimen/activity_padding8"
                        android:paddingEnd="@dimen/activity_padding6"
                        app:ccpDialog_cornerRadius="@dimen/activity_padding12"
                        app:ccpDialog_keyboardAutoPopup="false"
                        app:ccpDialog_showCloseIcon="true"
                        app:ccpDialog_showFastScroller="true"
                        app:ccp_showFlag="false"
                        app:ccp_showNameCode="false"
                        app:ccpDialog_showTitle="false"
                        app:ccpDialog_textColor="@color/black"
                        app:ccp_autoDetectCountry="false"
                        app:ccp_clickable="false"
                        app:ccp_textSize="@dimen/textSizeLarge"
                        app:layout_constraintBottom_toBottomOf="@+id/tilMobileNumber"
                        app:layout_constraintEnd_toStartOf="@+id/tilMobileNumber"
                        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                        app:layout_constraintTop_toTopOf="@+id/tilMobileNumber"
                        app:layout_constraintVertical_bias="0.0" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilMobileNumber"
                        style="@style/Widget.MyTheme.TextInputLayoutStyleWhite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_padding6"
                        android:layout_marginTop="@dimen/activity_padding12"
                        app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@+id/ccp"
                        app:layout_constraintTop_toBottomOf="@+id/tilEmail"
                        app:startIconDrawable="@drawable/ic_outline_phone_android_24">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/parent_s_mobile_number"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:lines="1"
                            android:text="@{data.phone_number}"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/etPincode"
                            android:singleLine="true"
                            android:textSize="@dimen/textSizeLarge" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        style="@style/btnMedium"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/activity_padding12"
                        android:text="@string/update"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSizeRegular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tilMobileNumber" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
