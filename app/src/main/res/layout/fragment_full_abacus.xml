<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cardBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icons_margin2"
                android:elevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/light_back"
                app:cardCornerRadius="@dimen/menu_icons_corner"
                app:cardMaxElevation="@dimen/card_elevation">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/menu_icons"
                    android:layout_height="@dimen/menu_icons"
                    android:padding="@dimen/activity_padding8"
                    app:srcCompat="@drawable/ic_back" />
            </com.google.android.material.card.MaterialCardView>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAbacus"
            style="@style/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/title_margin"
            android:textSize="@dimen/textSize18"
            app:layout_constraintBottom_toBottomOf="@+id/cardBack"
            app:layout_constraintEnd_toStartOf="@+id/linearMenu"
            app:layout_constraintStart_toEndOf="@+id/cardBack"
            app:layout_constraintTop_toTopOf="@+id/cardBack"
            tools:text="SET 1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/icons_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSettingTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icons_margin"
                android:elevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/light_setting"
                app:cardCornerRadius="@dimen/menu_icons_corner"
                app:cardMaxElevation="@dimen/card_elevation">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/menu_icons"
                    android:layout_height="@dimen/menu_icons"
                    android:padding="@dimen/activity_padding8"
                    app:srcCompat="@drawable/ic_menu_setting" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardYoutube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icons_margin"
                android:elevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/light_youtube"
                app:cardCornerRadius="@dimen/menu_icons_corner"
                app:cardMaxElevation="@dimen/card_elevation">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/menu_icons"
                    android:layout_height="@dimen/menu_icons"
                    android:padding="@dimen/activity_padding8"
                    app:srcCompat="@drawable/ic_youtube" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSubscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/icons_margin"
                android:elevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/light_subscribe"
                app:cardCornerRadius="@dimen/menu_icons_corner"
                app:cardMaxElevation="@dimen/card_elevation">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/menu_icons"
                    android:layout_height="@dimen/menu_icons"
                    android:padding="@dimen/activity_padding6"
                    app:srcCompat="@mipmap/ic_menu_subscribe" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDecimalMode"
            style="@style/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_padding20"
            android:shadowColor="@color/black"
            android:shadowRadius="0.1"
            android:text="@string/decimal_mode"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/swDecimalMode"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swDecimalMode"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingHorizontal="@dimen/activity_padding6"
            android:theme="@style/SCBSwitch"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/txtFreeMode"
            app:layout_constraintEnd_toEndOf="@+id/txtFreeMode"
            app:layout_constraintStart_toStartOf="@+id/txtFreeMode"
            tools:visibility="visible" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtFreeMode"
            style="@style/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_padding20"
            android:shadowColor="@color/black"
            android:shadowRadius="0.1"
            android:text="@string/free_mode"
            android:textSize="@dimen/textSizeLarge"
            app:layout_constraintBottom_toTopOf="@+id/swFreeMode"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swFreeMode"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingHorizontal="@dimen/activity_padding6"
            android:theme="@style/SCBSwitch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txtFreeMode"
            app:layout_constraintStart_toStartOf="@+id/txtFreeMode" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtShowTour"
            style="@style/mainTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/activity_padding12"
            android:shadowColor="@color/black"
            android:shadowRadius="0.1"
            android:text="@string/click_here_to_show_nabacus_tour"
            android:textSize="@dimen/textSizeSmall"
            app:layout_constraintBottom_toBottomOf="@+id/swFreeMode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtFreeMode" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtStartWith1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_padding12"
            android:gravity="center"
            android:paddingStart="@dimen/activity_padding8"
            android:paddingEnd="@dimen/activity_padding8"
            android:text="@string/txt_start_with_1"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/textSizeExtraSmall"
            app:fontFamily="@font/font_bold"
            app:layout_constraintBottom_toTopOf="@+id/txtRange"
            app:layout_constraintEnd_toStartOf="@+id/swRandom" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swResetStarting"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:theme="@style/SCBSwitch"
            app:layout_constraintEnd_toEndOf="@+id/txtStartWith1"
            app:layout_constraintStart_toStartOf="@+id/txtStartWith1"
            app:layout_constraintTop_toTopOf="@+id/swReset" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txt_Random"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/textSizeExtraSmall"
            app:fontFamily="@font/font_bold"
            app:layout_constraintBottom_toTopOf="@+id/txtRange"
            app:layout_constraintEnd_toEndOf="@+id/swRandom"
            app:layout_constraintStart_toStartOf="@+id/swRandom" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swRandom"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="@dimen/activity_padding12"
            android:checked="false"
            android:theme="@style/SCBSwitch"
            app:layout_constraintEnd_toStartOf="@+id/txtResetEveryTime"
            app:layout_constraintTop_toTopOf="@+id/swReset" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtResetEveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_padding8"
            android:gravity="center"
            android:text="@string/txt_Reset_when_start"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/textSizeExtraSmall"
            app:fontFamily="@font/font_bold"
            app:layout_constraintBottom_toTopOf="@+id/txtRange"
            app:layout_constraintEnd_toStartOf="@+id/txtRange" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swReset"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:checked="false"
            android:theme="@style/SCBSwitch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtRange"
            app:layout_constraintStart_toStartOf="@+id/txtResetEveryTime" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtRangeLable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_padding8"
            android:gravity="center"
            android:text="@string/txt_Range"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/textSizeExtraSmall"
            app:fontFamily="@font/font_bold"
            app:layout_constraintBottom_toTopOf="@+id/txtRange"
            app:layout_constraintEnd_toEndOf="@+id/txtRange"
            app:layout_constraintStart_toStartOf="@+id/txtRange" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtRange"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableEnd="@drawable/ic_edit"
            android:drawablePadding="@dimen/activity_padding4"
            android:drawableTint="@color/red"
            android:gravity="center"
            android:paddingHorizontal="@dimen/activity_padding8"
            android:text="From 1 To 100"
            android:textColor="@color/red"
            android:textSize="@dimen/textSizeExtraSmall"
            app:drawableTint="@color/red_600"
            app:fontFamily="@font/font_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtShowTour"
            app:layout_constraintTop_toTopOf="@+id/swReset" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearAbacus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearAbacusFreeMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>