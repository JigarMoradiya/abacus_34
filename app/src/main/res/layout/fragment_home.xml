<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icons_margin"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="@dimen/activity_padding2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_avatar_default" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEditImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/card_corner_radius12"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="@+id/cardProfileImage"
        app:layout_constraintTop_toTopOf="@+id/cardProfileImage"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="0.5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="@dimen/activity_padding4"
            app:srcCompat="@drawable/id_edit_profile" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtWelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_padding10"
        android:fontFamily="@font/font_extra_bold"
        android:includeFontPadding="false"
        android:text="Hello, Jigar ðŸ‘‹"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textSizeRegular"
        app:layout_constraintBottom_toTopOf="@+id/txtWelcomeMsg"
        app:layout_constraintStart_toEndOf="@+id/cardProfileImage"
        app:layout_constraintTop_toTopOf="@+id/cardProfileImage"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtWelcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_padding10"
        android:layout_marginTop="@dimen/activity_padding1"
        app:fontFamily="@font/font_bold"
        android:includeFontPadding="false"
        android:text="@string/welcome_to_abacus_application"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textSizeExtraSmall"
        app:layout_constraintBottom_toTopOf="@+id/txtMyAccount"
        app:layout_constraintStart_toEndOf="@+id/cardProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeTitle"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtMyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_padding10"
        android:layout_marginTop="@dimen/activity_padding4"
        android:background="@drawable/bg_all_curved_3"
        android:backgroundTint="@color/colorAccent"
        android:elevation="@dimen/activity_padding1"
        android:includeFontPadding="false"
        android:paddingHorizontal="@dimen/activity_padding4"
        android:paddingVertical="@dimen/activity_padding2"
        android:text="@string/my_account"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeExtraSmall"
        app:fontFamily="@font/font_semibold"
        app:layout_constraintBottom_toBottomOf="@+id/cardProfileImage"
        app:layout_constraintStart_toEndOf="@+id/cardProfileImage"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeMsg"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible" />

    <com.jigar.me.utils.widget.viewpager.CustomViewPagerSpeed
        android:id="@+id/viewPager"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/indicatorPager"
        app:layout_constraintEnd_toStartOf="@+id/linearTopEnd"
        app:layout_constraintTop_toTopOf="@+id/cardProfileImage"
        app:layout_constraintVertical_chainStyle="packed" />

    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
        android:id="@+id/indicatorPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cardProfileImage"
        app:layout_constraintEnd_toEndOf="@+id/viewPager"
        app:layout_constraintStart_toStartOf="@+id/viewPager"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        app:layout_constraintVertical_chainStyle="packed"
        app:spi_dotSelectedColor="@color/colorPrimary"
        app:spi_dotSelectedSize="@dimen/activity_padding6"
        app:spi_dotSize="@dimen/activity_padding4"
        app:spi_dotSpacing="@dimen/activity_padding4"
        app:spi_looped="true" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearTopEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/icons_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icons_margin"
            android:visibility="gone"
            app:cardBackgroundColor="@color/light_setting"
            app:cardCornerRadius="@dimen/menu_icons_corner"
            app:cardElevation="@dimen/card_elevation"
            app:cardMaxElevation="@dimen/card_elevation">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/menu_icons"
                android:layout_height="@dimen/menu_icons"
                android:padding="@dimen/menu_icons_padding"
                app:srcCompat="@drawable/ic_about_us_new" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSettingTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icons_margin"
            app:cardBackgroundColor="@color/light_setting"
            app:cardCornerRadius="@dimen/menu_icons_corner"
            app:cardElevation="@dimen/card_elevation"
            app:cardMaxElevation="@dimen/card_elevation">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/menu_icons"
                android:layout_height="@dimen/menu_icons"
                android:padding="@dimen/menu_icons_padding"
                app:srcCompat="@drawable/ic_menu_setting" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icons_margin"
            android:elevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/light_subscribe"
            app:cardCornerRadius="@dimen/menu_icons_corner"
            app:cardMaxElevation="@dimen/card_elevation">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/menu_icons"
                android:layout_height="@dimen/menu_icons"
                android:padding="@dimen/menu_icons_padding"
                app:srcCompat="@mipmap/ic_menu_subscribe" />

        </com.google.android.material.card.MaterialCardView>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/activity_padding20"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/txtOtherApps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardProfileImage">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="6"
            tools:itemCount="12"
            tools:listitem="@layout/raw_home_menu" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtOtherApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_other_apps"
        android:drawablePadding="@dimen/activity_padding6"
        android:fontFamily="@font/font_extra_bold"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_padding6"
        android:text="@string/check_other_application_by_us"
        android:textColor="@color/orange_500"
        android:textSize="@dimen/textSizeLarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewPagerCurrentPlan"
        app:layout_constraintStart_toStartOf="parent" />

    <com.jigar.me.utils.widget.viewpager.CustomViewPagerSpeed
        android:id="@+id/viewPagerCurrentPlan"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtOtherApps"
        app:layout_constraintTop_toTopOf="@+id/txtOtherApps" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtOtherApps"
        android:layout_marginEnd="@dimen/activity_padding16"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtPowerBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/power_by"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSizeRegular"
            app:fontFamily="@font/font_italic" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/power_by_logo_hor"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_logo_company_hor" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>
