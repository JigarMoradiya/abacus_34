<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/icons_margin2"
        android:layout_marginTop="@dimen/icons_margin2"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/cardFAQs"
        app:srcCompat="@drawable/logo_banner" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFAQs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icons_margin2"
        app:cardBackgroundColor="@color/light_faq"
        app:cardCornerRadius="@dimen/menu_icons_corner"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardMaxElevation="@dimen/card_elevation">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/menu_icons"
            android:layout_height="@dimen/menu_icons"
            android:padding="@dimen/activity_padding8"
            app:srcCompat="@drawable/ic_menu_faq" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/txtTermsCondition"
        app:layout_constraintTop_toBottomOf="@+id/cardFAQs">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_padding20">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/login"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize20"
                    app:fontFamily="@font/font_extra_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textAllCaps="false" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/activity_padding20"
                    android:text="@string/welcome_to_abacus_child_leaning_app_portraint"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/textSizeLarge"
                    app:fontFamily="@font/font_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtLable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/activity_padding6"
                    android:includeFontPadding="false"
                    android:text="@string/login_msg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeRegular"
                    app:fontFamily="@font/font_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.MyTheme.TextInputLayoutStyleWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_padding24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtLable"
                    app:startIconDrawable="@drawable/ic_outline_email_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_id"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/textSizeExtraLarge" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.MyTheme.TextInputLayoutStyleWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_padding16"
                    app:endIconMode="password_toggle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tilEmail"
                    app:startIconDrawable="@drawable/ic_outline_password_24">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/textSizeExtraLarge" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_padding6"
                    android:includeFontPadding="false"
                    android:paddingVertical="@dimen/activity_padding6"
                    android:text="@string/forgot_password_"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeLarge"
                    app:fontFamily="@font/font_semibold"
                    app:layout_constraintEnd_toEndOf="@+id/tilPassword"
                    app:layout_constraintTop_toBottomOf="@+id/tilPassword" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    style="@style/btnMedium"
                    android:layout_width="wrap_content"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizeExtraLarge"
                    android:layout_marginTop="@dimen/activity_padding12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtForgotPassword" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtGoBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:padding="@dimen/activity_padding16"
                    android:text="@string/go_back"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeLarge"
                    app:fontFamily="@font/font_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSubmit" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="@dimen/activity_padding12"
                    android:text="@string/don_t_have_an_account_signup"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/activity_padding6"
                    android:textSize="@dimen/textSizeExtraLarge"
                    app:fontFamily="@font/font_regular"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSubmit" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtTermsCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo_50"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingVertical="@dimen/activity_padding10"
        android:text="@string/i_agree_policy_login_portrait"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textSizeLarge"
        app:fontFamily="@font/font_regular"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
