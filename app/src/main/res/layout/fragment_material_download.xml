<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icons_margin2"
            android:elevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/light_back"
            app:cardCornerRadius="@dimen/menu_icons_corner"
            app:cardMaxElevation="@dimen/card_elevation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/menu_icons"
            android:layout_height="@dimen/menu_icons"
                android:padding="@dimen/menu_icons_padding"
                app:srcCompat="@drawable/ic_back" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/downloadMaterial"
            style="@style/mainTitle"
            android:layout_marginHorizontal="@dimen/title_margin"
            app:layout_constraintBottom_toBottomOf="@+id/cardBack"
            app:layout_constraintStart_toEndOf="@+id/cardBack"
            app:layout_constraintTop_toTopOf="@+id/cardBack" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/adView"
            app:layout_constraintStart_toEndOf="@+id/txtTitle"
            app:layout_constraintEnd_toStartOf="@+id/cardDownload"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/recyclerviewMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_padding2"
            android:elevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/light_download"
            app:cardCornerRadius="@dimen/menu_icons_corner"
            app:cardMaxElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/menu_icons"
            android:layout_height="@dimen/menu_icons"
                android:padding="@dimen/menu_icons_padding"
                app:srcCompat="@drawable/ic_download_arrow" />
        </com.google.android.material.card.MaterialCardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewMaterial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/activity_padding4"
            android:layout_marginEnd="@dimen/activity_padding4"
            android:layout_marginBottom="@dimen/activity_padding4"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/tvNotes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardBack"
            tools:itemCount="2"
            tools:listitem="@layout/raw_downloadmaterial_parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:paddingHorizontal="@dimen/activity_padding12"
            android:paddingVertical="@dimen/activity_padding6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtStoragePath"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:id="@+id/tvNotes"
            android:fontFamily="@font/font_semibold"
            android:gravity="center_vertical"
            android:linksClickable="true"
            android:text="@string/material_customization"
            android:textColor="@color/red"
            android:textColorLink="@color/colorHyperlinkBlue"
            android:textSize="@dimen/textSizeMedium" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtStoragePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_medium"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/activity_padding12"
            android:paddingBottom="@dimen/activity_padding6"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorListingHeading"
            android:textSize="@dimen/textSizeExtraSmall" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>