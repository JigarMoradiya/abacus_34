<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <import type="com.jigar.me.utils.AppConstants" />

        <variable
            name="title"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/icons_margin2"
            android:elevation="@dimen/card_elevation"
            app:cardBackgroundColor="@color/light_back"
            app:cardCornerRadius="@dimen/menu_icons_corner"
            app:cardMaxElevation="@dimen/card_elevation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/menu_icons"
            android:layout_height="@dimen/menu_icons"
                android:padding="@dimen/menu_icons_padding"
                app:srcCompat="@drawable/ic_back" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTitle"
            style="@style/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/title_margin"
            android:text="@string/my_profile"
            app:layout_constraintBottom_toBottomOf="@+id/cardBack"
            app:layout_constraintStart_toEndOf="@+id/cardBack"
            app:layout_constraintTop_toTopOf="@+id/cardBack" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_padding12"
            android:layout_marginVertical="@dimen/activity_padding8"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="@dimen/activity_padding2">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgUserProfile"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:srcCompat="@drawable/ic_avatar_default" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEditImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="@dimen/card_corner_radius12"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="@+id/cardProfileImage"
            app:layout_constraintTop_toTopOf="@+id/cardProfileImage"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="1dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="@dimen/activity_padding4"
                app:srcCompat="@drawable/id_edit_profile" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtWelcomeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_padding12"
            android:ellipsize="end"
            android:fontFamily="@font/font_extra_bold"
            android:gravity="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Hello, Jigar ðŸ‘‹"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSizeRegular"
            app:layout_constraintBottom_toTopOf="@+id/txtWelcomeMsg"
            app:layout_constraintEnd_toStartOf="@+id/cardProfileImage"
            app:layout_constraintStart_toEndOf="@+id/txtTitle"
            app:layout_constraintTop_toTopOf="@+id/cardProfileImage"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtWelcomeMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_padding12"
            android:layout_marginTop="@dimen/activity_padding2"
            app:fontFamily="@font/font_bold"
            android:gravity="end"
            android:includeFontPadding="false"
            android:text="@string/welcome_to_abacus_application"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/textSizeExtraSmall"
            app:layout_constraintBottom_toBottomOf="@+id/cardProfileImage"
            app:layout_constraintEnd_toStartOf="@+id/cardProfileImage"
            app:layout_constraintStart_toEndOf="@+id/txtTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtWelcomeTitle"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_padding12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardProfileImage">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_padding10"
                    android:layout_marginEnd="@dimen/activity_padding5"
                    app:cardBackgroundColor="@color/red_50"
                    app:cardCornerRadius="@dimen/activity_padding8"
                    app:layout_constraintEnd_toStartOf="@+id/card2"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/red_200"
                    app:strokeWidth="@dimen/activity_padding1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_padding12">


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/total_exam"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                app:fontFamily="@font/font_semibold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtStatisticsCount1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_padding4"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="-"
                                android:textColor="@color/red_900"
                                android:textSize="@dimen/textSizeLarge"
                                app:fontFamily="@font/font_bold"
                                tools:text="10" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtStatisticsTime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_padding1"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeExtraSmall"
                            app:fontFamily="@font/font_medium"
                            tools:text="15,Nov'23 03:20 AM" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_padding5"
                    android:layout_marginEnd="@dimen/activity_padding5"
                    app:cardBackgroundColor="@color/purple_50"
                    app:cardCornerRadius="@dimen/activity_padding8"
                    app:layout_constraintEnd_toStartOf="@+id/card3"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/card1"
                    app:layout_constraintTop_toTopOf="@+id/card1"
                    app:strokeColor="@color/purple_200"
                    app:strokeWidth="@dimen/activity_padding1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_padding12">


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/total_exercise"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                app:fontFamily="@font/font_semibold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtStatisticsCount2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_padding4"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="-"
                                android:textColor="@color/purple_900"
                                android:textSize="@dimen/textSizeLarge"
                                app:fontFamily="@font/font_bold"
                                tools:text="10" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtStatisticsTime2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_padding1"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeExtraSmall"
                            app:fontFamily="@font/font_medium"
                            tools:text="15,Nov'23 03:20 AM" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_padding5"
                    android:layout_marginEnd="@dimen/activity_padding12"
                    app:cardBackgroundColor="@color/blue_50"
                    app:cardCornerRadius="@dimen/activity_padding8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1.3"
                    app:layout_constraintStart_toEndOf="@+id/card2"
                    app:layout_constraintTop_toTopOf="@+id/card1"
                    app:strokeColor="@color/blue_200"
                    app:strokeWidth="@dimen/activity_padding1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_padding12">


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/total_custom_challenge_mode"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                app:fontFamily="@font/font_semibold" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtStatisticsCount3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/activity_padding4"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="-"
                                android:textColor="@color/blue_900"
                                android:textSize="@dimen/textSizeLarge"
                                app:fontFamily="@font/font_bold"
                                tools:text="10" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtStatisticsTime3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_padding1"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeExtraSmall"
                            app:fontFamily="@font/font_medium"
                            tools:text="15,Nov'23 03:20 AM" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/activity_padding6"
                    android:layout_marginEnd="@dimen/activity_padding6"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card1"
                    tools:itemCount="2"
                    app:spanCount="2"
                    tools:listitem="@layout/row_my_account_parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>