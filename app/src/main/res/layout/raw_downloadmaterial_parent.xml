<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_padding2"
        android:elevation="@dimen/card_elevation2"
        app:cardBackgroundColor="@color/card_bg"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardMaxElevation="@dimen/card_elevation2"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontFamily="@font/font_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/activity_padding12"
                android:paddingTop="@dimen/activity_padding8"
                android:paddingEnd="@dimen/activity_padding12"
                android:singleLine="true"
                android:text="@string/downloadMaterial"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/textSizeLarge"
                app:layout_constraintEnd_toStartOf="@+id/txtTotal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLine"
                android:layout_width="70dp"
                android:layout_height="3dp"
                android:layout_marginStart="@dimen/activity_padding12"
                app:cardBackgroundColor="@color/colorTint"
                app:cardCornerRadius="@dimen/card_corner_radius4"
                android:layout_marginTop="@dimen/activity_padding4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_semibold"
                android:gravity="center_vertical"
                android:maxLines="1"
                tools:text="(20 worksheet)"
                android:singleLine="true"
                android:layout_marginTop="@dimen/activity_padding4"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeMedium"
                app:layout_constraintStart_toEndOf="@+id/txtTitle"
                app:layout_constraintBottom_toBottomOf="@+id/cardLine"
                app:layout_constraintTop_toTopOf="@+id/txtTitle" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDownloadNow"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:drawableStart="@drawable/ic_download_arrow_small"
                android:drawablePadding="@dimen/activity_padding4"
                android:fontFamily="@font/font_semibold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:background="?attr/selectableItemBackground"
                android:paddingStart="@dimen/activity_padding12"
                android:paddingEnd="@dimen/activity_padding12"
                android:singleLine="true"
                android:text="@string/download_now"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/textSizeMedium"
                app:drawableTint="@color/colorPurple"
                app:layout_constraintBottom_toTopOf="@+id/recyclerViewImages"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtTitle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewImages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingHorizontal="@dimen/activity_padding4"
                android:paddingBottom="@dimen/activity_padding8"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/activity_padding12"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardLine"
                tools:itemCount="2"
                tools:listitem="@layout/raw_downloadmaterial_child" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>