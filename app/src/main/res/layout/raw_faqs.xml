<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="faqs"
            type="com.jigar.me.data.local.data.FAQs" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/card_bg"
        android:layout_marginBottom="@dimen/activity_padding8"
        android:layout_marginHorizontal="@dimen/activity_padding12"
        android:paddingHorizontal="@dimen/activity_padding12"
        android:paddingVertical="@dimen/activity_padding10"
        android:background="@drawable/bg_all_curved_12_accent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtQuestions"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgArrow"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:autoLink="email"
            tools:text="Do I need to subscribe to use the app?"
            android:text="@{faqs.question}"
            app:fontFamily="@font/font_bold"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:textColorLink="@color/blue"
            android:layout_marginEnd="@dimen/activity_padding4"
            android:textSize="@dimen/textSizeRegular" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtAnswer"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/txtQuestions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            tools:text="While the app offers some free content, a subscription plan provides access to premium features and a more comprehensive learning experience."
            android:text="@{faqs.answer}"
            android:autoLink="all"
            android:textColorLink="@color/blue"
            android:visibility="gone"
            tools:visibility="visible"
            app:fontFamily="@font/font_medium"
            android:textColor="@color/colorEditTextBlack_33"
            android:layout_marginTop="@dimen/activity_padding4"
            android:includeFontPadding="false"
            android:textSize="@dimen/textSizeMedium" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/black"
            android:rotation="0"
            android:visibility="@{faqs.answer.empty?View.GONE:View.VISIBLE}"
            android:id="@+id/imgArrow"
            app:layout_constraintBottom_toBottomOf="@+id/txtQuestions"
            app:layout_constraintTop_toTopOf="@+id/txtQuestions"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_arrow_down" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>