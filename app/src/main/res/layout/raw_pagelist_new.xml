<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dataModel"
            type="com.jigar.me.data.model.dbtable.abacus_all_data.Pages" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardToddler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_padding4"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius4"
        app:cardElevation="@dimen/card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgIcon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_level_icon"
                app:tint="@color/black" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_padding8"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{dataModel.name}"
                android:textColor="@color/colorHeadingBlack_00"
                android:textSize="@dimen/textSizeMedium"
                app:fontFamily="@font/font_bold"
                app:layout_constraintBottom_toTopOf="@+id/txtDesc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgIcon"
                app:layout_constraintTop_toTopOf="@+id/imgIcon"
                tools:text="Lesson 1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_medium"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{dataModel.description}"
                android:textColor="@color/colorListingHeading"
                android:textSize="@dimen/textSizeSmall"
                android:visibility="@{dataModel.description.empty?View.GONE:dataModel.description == null?View.GONE:View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/imgIcon"
                app:layout_constraintEnd_toEndOf="@+id/txtTitle"
                app:layout_constraintStart_toStartOf="@+id/txtTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle"
                tools:text="Subtraction of Single digit for +-7" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewSet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding6"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgIcon"
                app:spanCount="3"
                tools:itemCount="3"
                tools:listitem="@layout/raw_set_list" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>