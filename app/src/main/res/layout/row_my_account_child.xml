<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="dataModel"
            type="com.jigar.me.data.local.data.MyAccountMenu" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgIcon"
            android:layout_width="20dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            app:icons="@{dataModel.menuIcon}"
            android:paddingVertical="@dimen/activity_padding6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_account_need_help" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/font_medium"
            android:includeFontPadding="false"
            android:text="@{dataModel.menuTitle}"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeMedium"
            app:layout_constraintBottom_toBottomOf="@+id/imgIcon"
            app:layout_constraintTop_toTopOf="@+id/imgIcon"
            app:layout_constraintStart_toEndOf="@+id/imgIcon"
            tools:text="@string/need_help" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgPaid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="fitStart"
            android:visibility="@{dataModel.isPaid?View.VISIBLE:View.GONE,default=gone}"
            tools:visibility="visible"
            android:layout_marginStart="@dimen/activity_padding6"
            app:layout_constraintBottom_toBottomOf="@+id/imgIcon"
            app:layout_constraintTop_toTopOf="@+id/imgIcon"
            app:layout_constraintStart_toEndOf="@+id/txtTitle"
            app:srcCompat="@mipmap/paid_tag" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgArrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_padding6"
            android:rotation="-90"
            app:layout_constraintBottom_toBottomOf="@+id/imgIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgIcon"
            app:srcCompat="@drawable/ic_arrow_down"
            app:tint="@color/brand_secondary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>