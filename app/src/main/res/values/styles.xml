<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Transparent" parent="Theme.MaterialComponents">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

<!--        <item name="android:windowBackground">@drawable/logo_banner</item>-->
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

<!--        <item name="android:windowTranslucentStatus">true</item>-->

        <!-- Add these -->
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>
    <style name="AppThemeLogin" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="CustomCardViewRightCornerStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_right_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_right_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/card_corner_radius12</item>
        <item name="cornerSizeBottomRight">@dimen/card_corner_radius12</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomsheetStyleWrapper</item>
    </style>

    <style name="bottomsheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_curved_24_dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/text_box_underline</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="mainTitle" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/font_extra_bold</item>
        <item name="android:textSize">@dimen/textSizeExtraLarge</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="mainTitleSmall" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/font_extra_bold</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="btnExtraSmall">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:textSize">@dimen/button_extra_small_text_size</item>
        <item name="android:textColor">@color/btn_color_text</item>
        <item name="android:backgroundTint">@color/btn_color_bg</item>
        <item name="android:layout_height">@dimen/button_extra_small_height</item>
        <item name="cornerRadius">@dimen/button_extra_small_corner</item>
        <item name="android:paddingStart">@dimen/button_extra_small_padding_lr</item>
        <item name="android:paddingEnd">@dimen/button_extra_small_padding_lr</item>
    </style>
    <style name="btnSmall">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:textSize">@dimen/button_small_text_size</item>
        <item name="android:textColor">@color/btn_color_text</item>
        <item name="android:backgroundTint">@color/btn_color_bg</item>
        <item name="android:layout_height">@dimen/button_small_height</item>
        <item name="cornerRadius">@dimen/button_small_corner</item>
        <item name="android:paddingStart">@dimen/button_small_padding_lr</item>
        <item name="android:paddingEnd">@dimen/button_small_padding_lr</item>
    </style>
    <style name="btnMedium">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:textSize">@dimen/button_medium_text_size</item>
        <item name="android:textColor">@color/btn_color_text</item>
        <item name="android:backgroundTint">@color/btn_color_bg</item>
        <item name="android:layout_height">@dimen/button_medium_height</item>
        <item name="cornerRadius">@dimen/button_medium_corner</item>
        <item name="android:paddingStart">@dimen/button_medium_padding_lr</item>
        <item name="android:paddingEnd">@dimen/button_medium_padding_lr</item>
    </style>

    <style name="MyRadioButtonCurrency" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#80FFFFFF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="mySwitchThemeDeactivated" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">#6B825FFC</item>
        <item name="android:colorForeground">#a6a6b2</item>
    </style>

    <style name="SCBSwitch" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/green_600</item>
        <item name="android:colorForeground">@color/gray_light</item>
    </style>

    <!--  Dailog  -->
    <style name="DialogAppearFromCenter">
        <item name="android:windowEnterAnimation">@anim/dialog_from_center_fast</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_center_fast_close</item>
    </style>

    <style name="DialogAppearFromBottomExpand">
        <item name="android:windowEnterAnimation">@anim/dialog_open_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_close_animation</item>
    </style>

    <style name="DialogTopMenuAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_top_menu_open</item>
        <item name="android:windowExitAnimation">@anim/dialog_top_menu_close</item>
    </style>

    <style name="TabTextAppearanceMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">@dimen/activity_padding2</item>
        <item name="android:textSize">@dimen/textSizeRegular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="gridBGameStyle15">
        <item name="android:layout_width">@dimen/bGameSize15</item>
        <item name="android:layout_height">@dimen/bGameSize15</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="textGameStyle24">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="gridBGameStyle24">
        <item name="android:layout_width">@dimen/buttonSize24</item>
        <item name="android:layout_height">@dimen/buttonSize24</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="gridBGameStyle9">
        <item name="android:layout_width">@dimen/bGameSize9</item>
        <item name="android:layout_height">@dimen/bGameSize9</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="textGameStyle9">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="textGameStyle15">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Widget.MyTheme.TextInputLayoutStyleWhite" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@color/brand_alert</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxStrokeColor">@color/textinputlayout_stroke_color</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeErrorColor">@color/brand_alert</item>
        <item name="boxStrokeWidth">0.7dp</item>
        <item name="android:radius">12dp</item>
        <item name="android:textColorHint">@color/brand_secondary</item>
        <item name="errorTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="helperTextTextAppearance">?attr/textAppearanceCaption</item>
        <item name="errorTextColor">@color/brand_alert</item>
        <item name="hintTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--        <item name="android:backgroundDimEnabled">true</item>-->
        <!--        <item name="android:backgroundDimAmount">0</item>-->
    </style>
</resources>